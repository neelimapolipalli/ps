mpo=input('employee number:')
empname=input('employee name:')
empdesign=input('designation:')
basicsalary=int(input('basic salar='))
da=int(input('da='))
ta=int(input('ta='))
hra=int(input('hra='))
netsalary=basicsalary+da+ta+hra
if netsalary>100000:
    tax=netsalary*10/100
elif netsalary>50000:
    tax=netsalary*7/100
elif netsalary>40000:
    tax=netsalary*4/100
elif netsalary>20000:
    tax=netsalary*2/100
else:
    tax=0
    print('tax=',tax)
  
  
  
  

